.bet-scores-in-match
  %table.table.table-striped.table-bordered
    %tr
      %th Match
      %th Score
      %th Money
      %th Created At
      %th Action

    - @bet_scores.each do |bet_score|
      %tr
        %td #{bet_score.match.name}
        %td #{bet_score.score}
        %td #{number_to_currency(bet_score.money, {precision: 0, unit: "VND "})}
        %td #{(bet_score.created_at.localtime).strftime("%b %d, %Y - %H:%M")}
        %td.action
          %a.delete{"data-bet-score-id" => bet_score.id}
            %i.fa.fa-trash-o
            Delete

  %div.new-bet-score
    %h1 Create new Bet Score for this match:
    = bootstrap_form_for @match.bet_scores.new, :url => match_bet_scores_path(@match) do |f|
      = f.text_field :scorea, type: 'number', label: @match.playera.name
      = f.text_field :scoreb, type: 'number', label: @match.playerb.name
      = f.text_field :money, type: 'number', placeholder: "Money must be multiple of 10,000 VND", step: 10000


      .actions
        = f.submit 'Save'
