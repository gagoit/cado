.match
  .row
    .col-md-6
      = render :partial => "shared/slide", :locals => {:class_name => "match_photos", :images => @match.match_photos.map { |e| e.image.url(:small) }}

    .col-md-6
      %h2 #{@match}
      .description
        = raw @match.description

  / .row
  /   .col-lg-12
  /     %h2.page-header Players

  /     %p #{@match.players}

= link_to 'Add Photos', new_match_photo_path(match_id: @match.id)
\|
= link_to 'Edit', edit_match_path(@match)
\|
= link_to 'Back', matches_path
