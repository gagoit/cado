= bootstrap_form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :name

  = f.text_area :short_description, :class => 'tinymce', :rows => 3

  = f.text_area :description, :class => "tinymce", :rows => 6

  = f.datetime_select :start_time

  = f.text_field :result

  = f.select :playera_id, (Team.all.map { |e| [e.name, e.id] }), {}, :data => { :placeholder => 'Select Team' }

  = f.select :playerb_id, (Team.all.map { |e| [e.name, e.id] }), {}, :data => { :placeholder => 'Select Team' }

  .actions
    = f.submit 'Save'

= tinymce