= bootstrap_form_for @match, :html => { :multipart => true } do |f|
  
  = f.select :tournament_id, (Tournament.all.map { |e| [e.name, e.id] }), {}, :data => { :placeholder => 'Select Tournament' }

  = f.text_field :name

  = f.text_area :short_description, :class => 'tinymce', :rows => 3

  = f.text_area :description, :class => "tinymce", :rows => 6

  = f.datetime_select :start_time

  = f.text_field :result

  = f.select :playera_id, (Team.all.map { |e| [e.name, e.id] }), {}, :data => { :placeholder => 'Select Team' }

  = f.select :playerb_id, (Team.all.map { |e| [e.name, e.id] }), {}, :data => { :placeholder => 'Select Team' }

  .actions
    = f.submit 'Save'

= tinymce