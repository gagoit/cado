= bootstrap_form_for @team, :html => { :multipart => true } do |f|

  = f.text_field :name

  = f.text_field :short_name

  .fileinput.fileinput-new{"data-provides" => "fileinput"}
    .fileinput-preview.thumbnail{"data-trigger" => "fileinput", :style => "width: 200px; height: 150px;"}
    %div
      %span.btn.btn-default.btn-file
        %span.fileinput-new Select image
        %span.fileinput-exists Change
        %input{id: "team_main_image", name: "team[main_image]", :type => "file"}/
      %a.btn.btn-default.fileinput-exists{"data-dismiss" => "fileinput", :href => "#"} Remove

  = f.text_area :players, :rows => 3

  = f.text_area :short_description, :class => 'tinymce', :rows => 3

  = f.text_area :description, :class => "tinymce"

  .actions
    = f.submit 'Save'

= tinymce