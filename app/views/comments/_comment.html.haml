.comment
  .user-avatar.col-lg-2
    - if comment.created_by.avatar_file_name
      %img{src: comment.created_by.avatar.url(:small)}
    - else
      = image_tag 'no-avatar.jpg'
  .content.col-lg-10
    .header
      %p 
        %span.user-name
          = link_to comment.created_by.name, comment.created_by if comment.created_by
        %span.action
          commented
        %span.time-post
          = time_ago_in_words comment.created_at 
          ago

    .body
      %p 
        = raw comment.body