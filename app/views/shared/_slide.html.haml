#myCarousel.carousel.slide{:class => class_name}
  / Indicators
  %ol.carousel-indicators
    - images.each_with_index do |image, index|
      %li{class: (index == 0 ? "active" : ""), "data-slide-to" => index, "data-target" => "#myCarousel"}
    
  / Wrapper for slides
  .carousel-inner
    - images.each_with_index do |image, index|
      .item{class: (index == 0 ? "active" : "")}
        .fill{:style => "background-image:url('#{image}');"}
        .carousel-caption
          /%h1 Modern Business - A Bootstrap 3 Template
        
  / Controls
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel"}
    %span.icon-prev
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel"}
    %span.icon-next